@model TopPost.Models.Favorite

@{
    var oprions = new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "GET",
                    UpdateTargetId = "fav-bar"
                };
}

@if (Model.User == null)
{
    @Ajax.ActionLink("Favorite", "Add", "Favorites", new { postId = Model.PostId }, oprions, new { @Class = "btn btn-default" })
}
else
{
    @Ajax.ActionLink("Favorited", "Remove", "Favorites", new { favId = Model.Id }, oprions, new { @Class = "btn btn-success" })
}