@model TopPost.Models.Like

@{
    var oprions = new AjaxOptions
                {
                    InsertionMode = InsertionMode.Replace,
                    HttpMethod = "GET",
                    UpdateTargetId = "likes-bar"
                };
}

@if (Model.Value == true)
{
    @Ajax.ActionLink("Liked", "Unvote", "Likes", new { PostId = Model.PostId }, oprions, new { @Class = "btn btn-info" })
    @Ajax.ActionLink("Dislike", "Vote", "Likes", new { Value = false, PostId = Model.PostId }, oprions, new { @Class = "btn btn-default" })
}
else if (Model.Value == false)
{
    @Ajax.ActionLink("Like", "Vote", "Likes", new { Value = true, PostId = Model.PostId }, oprions, new { @Class = "btn btn-default" })
    @Ajax.ActionLink("Disliked", "Unvote", "Likes", new { PostId = Model.PostId }, oprions, new { @Class = "btn btn-danger" })
}
else
{
    @Ajax.ActionLink("Like", "Vote", "Likes", new { Value = true, PostId = Model.PostId }, oprions, new { @Class = "btn btn-default" })
    @Ajax.ActionLink("Dislike", "Vote", "Likes", new { Value = false, PostId = Model.PostId }, oprions, new { @Class = "btn btn-default" })
}
Score: @Html.Action("GetScore", "Likes", new { postId = Model.PostId })